    <resultMap id="selectMap" type="com.action.business.struct.entity.Test">
        <!-- id为主键 -->
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="testCpList" ofType="com.action.business.struct.entity.TestCp">
            <id column="id" property="id"/>
            <result property="age" column="age"/>
            <result property="testId" column="test_id"/>
        </collection>
    </resultMap>

    <!--    <select id="getTescp" resultMap="selectMap">-->
    <select id="getTescp" resultType="com.action.business.struct.entity.TestCp">
        select bt.id, bt.name, btc.age, btc.test_id, btc.id
        from biz_test_cp btc
                 left join biz_test bt on bt.id = btc.test_id
        where btc.id = #{id}
    </select>


